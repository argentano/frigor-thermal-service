{
    "root": true,
    "ignorePatterns": [
        "/bin", "/node_modules"
    ],
    "env": {
        "es2021": true,
        "node": true
    },
    "overrides": [],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "plugins": [
        "@typescript-eslint"//, 
        // "prettier"
    ],
    "extends": [
        "eslint:recommended",
        "plugin:@typescript-eslint/eslint-recommended",
        "plugin:@typescript-eslint/recommended",
        "prettier"
    ],
    "rules": {
        "no-console": 1, // warning
        // "prettier/prettier": 2, // error
        "no-extra-semi":"warn",
        "semi": "off",
        "semi-style": "off",
        "no-empty": "off"
    }
}
